<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ssul</title>
    <link rel="stylesheet" href="/stylesheets/board.css">
    <script type="text/javascript" src="/javascripts/board.js"></script>
</head>
<body>
    <header>
        <div class="center-align" id="header-div">
            <div class="inline-block" id="header-left"><a href="/"></a></div>
            <div class="inline-block" id="header-center"><a href="/">Ssul</a></div>
            <div class="inline-block" id="header-right">
                <div class="inline-block">
                    <% if(session.email){ %> 
                        <button id="login_btn">마이페이지</button> 
                        <button id="sign_up_btn">로그아웃</button>
                    <% } else{ %>
                        <button id="login_btn">로그인</button> 
                        <button id="sign_up_btn">회원가입</button>
                    <% } %>
                </div>
            </div>
        </div>
    </header>
    <% include nav %>
    <section>
        <div class="center-align">
            <div id="inner-div">
                <div id="main-top">
                    <p>게시글 목록</p>
                </div>
                <div id="title-div">
                    <table>
                        <tbody>
                            <tr id="title-table">
                                <td>번호</td>
                                <td colspan="8">제목</td>
                                <td colspan="2">작성자</td>
                                <td colspan="2">작성일</td>
                                <td>조회수</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="comment-div">
                    <table>
                        <tbody>
                            <% for(let post of posts) { %>
                            <tr class="main-table">
                                <td class="align"><%= post.id %></td>
                                <% if(session){ %> 
                                    <td colspan="8" class="title-td"><a href="./board/<%= post.id %>"><%= post.content %></a></td>
                                <% } else{ %>
                                    <td colspan="8" class="title-td"><a href="./login"><%= post.content %></a></td>
                                <% } %>
                                <td colspan="2" class="align"><%= post.writer %></td>
                                <td colspan="2" class="align"><%= post.createdAt.toLocaleString() %></td>
                                <td class="align"><%= post.views %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div>
                    <% if(session){ %> 
                        <button id="write-btn"><a href="./board/write">글쓰기</a></button>
                    <% } else{ %>
                        <button id="write-btn"><a href="./login">글쓰기</a></button>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
    <script>
        var sign_up = document.getElementById('sign_up_btn');
        var login = document.getElementById('login_btn');
        sign_up.addEventListener('click', function(event){
            location.href='./login/Sign_Up';
        });
        login.addEventListener('click', function(event){
            location.href='../login';
        });
    </script>
</body>
</html>